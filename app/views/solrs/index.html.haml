-local_prefix = "views.solrs.index"
%h1= t("#{local_prefix}.header")

%table
  %tr
    %th Name
  -solrs.each do |name, solr|
    %tr
      %td= link_to(name, edit_solr_path(solr))
      %td= render "sync_stop_button", :solr => solr
      %td= button_to(t("#{local_prefix}.remove"),
            { :action => :destroy, :id => solr.name }, :method => :delete)

%br/

= link_to(t("#{local_prefix}.add_new"), new_solr_path)

