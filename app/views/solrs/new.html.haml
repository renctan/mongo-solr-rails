%h1 New Solr Connection

= render :partial => "partials/error", :locals => { :errors => err_msg }

= form_for(:conn, :url => { :controller => "solrs",
                            :action => "create" }) do |f|
  = f.label :location, "name"
  = f.text_field :name
  = f.label :location, "location"
  = f.text_field :location
  = f.submit "connect"

%br/

= link_to("Solr List", solrs_path)

